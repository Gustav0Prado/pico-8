--paddle
padd={
	x=54,y=120,
	w=30,h=4,sp=1
}

padd.update=function()
	if btn(➡️) and padd.x<128-padd.w then
		padd.x+=padd.sp
	end
	if btn(⬅️) and padd.x>0 then
		padd.x-=padd.sp
	end
end	

padd.draw=function()
	rectfill(padd.x,padd.y,padd.x+padd.w,padd.y+padd.h, 7)
end
