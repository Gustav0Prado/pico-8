-- ball
ball={
	x=1,y=1,r=2,
	dx=1,dy=1,
}

ball.update=function()
	ball.x+=ball.dx
	ball.y+=ball.dy
	
	--x collision
	if ball.x > 127 or ball.x < 0 then
		ball.dx=-ball.dx
		sfx(0)
	end
	
	--y collision
	if ball.y > 127 or ball.y < 0 then
		ball.dy=-ball.dy
		sfx(0)
	end
end

ball.draw=function()
	circfill(ball.x,ball.y,ball.r,10)
end
